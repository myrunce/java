
public class Calculator implements java.io.Serializable{
	private int op1;
	private char op;
	private int op2;
	private int result;
	
	public Calculator(int oper1, char oper, int oper2) {
		this.op1 = oper1;
		this.op = oper;
		this.op2 = oper2;
	}
	
	public Calculator() {
		
	}
	
	public int getOp1() {
		return this.op1;
	}
	
	public int getOp() {
		return this.op;
	}
	
	public int getOp2() {
		return this.op2;
	}
	
	public void setOp1(int op1) {
		this.op1 = op1;
	}
	
	public void setOp2(int op2) {
		this.op1 = op2;
	}
	
	public void setOp(char op) {
		this.op = op;
	}
	
	public void performOperation(){
		if (this.op == "+") {
			result = this.op1 + this.op2;
		}
	}
}
